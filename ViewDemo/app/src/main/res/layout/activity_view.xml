<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <View android:layout_width="150dp"
          android:layout_height="150dp"
          android:id="@+id/view"
          android:layout_gravity="center"
          android:layout_marginTop="40dp"
          android:layout_marginBottom="60dp"
          android:background="#FCC93F"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_margin="10dp"
                  android:gravity="center">

        <Button android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/btn_200"
                android:text="200"
                android:background="#F79611"
                android:textColor="@android:color/white"/>

        <Button android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/btn_250"
                android:layout_marginLeft="10dp"
                android:text="250"
                android:background="#F79611"
                android:textColor="@android:color/white"/>

        <Button android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/btn_300"
                android:text="300"
                android:layout_marginLeft="10dp"
                android:background="#F79611"
                android:textColor="@android:color/white"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_margin="10dp"
                  android:gravity="center">

        <Button android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/btn_r0"
                android:text="R 00"
                android:background="#F79611"
                android:textColor="@android:color/white"/>

        <Button android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/btn_r20"
                android:layout_marginLeft="10dp"
                android:text="R 20"
                android:background="#F79611"
                android:textColor="@android:color/white"/>

        <Button android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/btn_r100"
                android:text="R 100"
                android:layout_marginLeft="10dp"
                android:background="#F79611"
                android:textColor="@android:color/white"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_margin="10dp"
                  android:gravity="center">

        <Button android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/btn_border0"
                android:text="Border 0"
                android:background="#F79611"
                android:textColor="@android:color/white"/>

        <Button android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/btn_border1"
                android:layout_marginLeft="10dp"
                android:text="Border 1"
                android:background="#F79611"
                android:textColor="@android:color/white"/>

        <Button android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/btn_border10"
                android:text="Border 10"
                android:layout_marginLeft="10dp"
                android:background="#F79611"
                android:textColor="@android:color/white"/>
    </LinearLayout>
</LinearLayout>